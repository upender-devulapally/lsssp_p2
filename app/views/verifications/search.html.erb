<% title "LSSSP : Employee Verification" %>
<% content_for :sub_heading do %>
    <%= sub_heading('LSSSP', 'Employee Verification') %>
<% end %>

<h3>Search Result :</h3>
<% if @user.blank? %>
    <div class="error_msg">
      OOPS!.. There is No Student Existing in the System. Please Check Details.
    </div>
<%else %>
    <h3>Student Details : </h3>
<div class="formbox">
  <div class="showregionnamedesc">First Name :  <%= @user.name %></div>
  <div class="divider"></div>
  <div class="showregionnamedesc">Last Name :  <%= @user.last_name %></div>
  <div class="divider"></div>
  <div class="showregionnamedesc">Enrollment Number :  <%= @user.enrollment_no %></div>
  <div class="divider"></div>
  <div class="showregionnamedesc">Primary Contact Number :  <%= @user.primary_number %></div>
  <div class="divider"></div>
  <div class="showregionnamedesc">Secondary Contact Number :  <%= @user.secondary_number %></div>
  <div class="divider"></div>
  <div class="showregionnamedesc">Email : <%= @user.email %></div>
</div>
    <h3>Certification Details : </h3>

    <table class="tablesorter">
      <thead>
      <tr>
        <th>Certificate</th>
        <th>Certificate Provider</th>
        <th>Certificate Status</th>
      </tr>
      </thead>
      <tbody>
       <% @owned.each do |owned| %>
         <tr>
           <td><%= owned.certification.name %></td>
           <td>
             <%=link_to owned.provider.name + " "+owned.provider.last_name,user_info_path(:id=>owned.provider.id),:rel=>user_info_path(:id=>owned.provider.id),:class=>'ajax-cluetip'%>

           </td>
           <td>
             <% if  owned.issued? %>
                Certified
              <%else %>
              <font color="#cc0000"><b>Pending</b></font>
             <% end%>
           </td>
         </tr>
       <%end %>
      </tbody>
    </table>
<% end %>