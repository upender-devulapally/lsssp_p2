<% title "LSSSP : Assignments" %>
<div class="formbox">
  <div class="desc"><b>Name</b> :  <%= @assignment.name %></div>
  <div class="divider"></div>
  <div class="desc"><b>Description</b> : <%= @assignment.description.html_safe %> </div>
  <div class="divider"></div>
  <div class="desc"><b>Attachments</b> : <%= @assignment.attachments.size %>
  <% for attachment in @assignment.attachments %>
    <%=image_tag('attach.gif') %>
                        <%= link_to attachment.attachment_file_name,"#"%>
  <%end%>
  </div>
</div>
